<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bernardo.kapp.MainActivity">

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Bem vindo! Disfrute do melhor do mundo da Kizomba!"  android:layout_span="4"
        android:textSize="17sp"
        android:padding="24dip"
        android:textColor="#000"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text=""
                android:padding="18dip"
                android:textColor="#000"
                android:layout_column="8" />


        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Escolha a sua pesquisa!"  android:layout_span="4"
                android:padding="18dip"
                android:textColor="#000"
                android:gravity="center"/>


        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView01" android:text="Row 3 column 1"
                android:layout_weight="1"  android:background="#b0b0b0"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>


            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button_festas"
                android:layout_width="wrap_content"
                android:text="Festas"
                android:layout_column="2"
                android:onClick="onClick">
            </Button>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView03" android:text="Row 3 column 1"
                android:layout_weight="1"  android:background="#b0b0b0"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button_aulas"
                android:layout_width="wrap_content"
                android:text="Aulas"
                android:onClick="onClick"
                android:layout_column="2">
            </Button>
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView05" android:text="Row 3 column 1"
                android:layout_weight="1"  android:background="#b0b0b0"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>


            <Button
                android:layout_height="wrap_content"
                android:id="@+id/button_festivais"
                android:layout_width="wrap_content"
                android:text="Festivais"
                android:onClick="onClick"
                android:layout_column="2">
            </Button>
        </TableRow>


    </TableLayout>

</RelativeLayout>
